<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Figtree:ital,wght@0,300..900;1,300..900&display=swap");
      @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      label {
        font-weight: 100;
      }
      input {
        font-weight: 100;
        width: max-content;
        padding: 10px 20px;
        border: none;
        outline: none;
        border: 1px solid rgba(234, 234, 234, 0.8);
        padding-left: 10px;
        width: 100%;
        border-radius: 5px;
        font-family: "Poppins";
        font-weight: 300;
      }
      form {
        display: flex;
        align-items: center;
        gap: 20px;
        justify-content: center;
        width: 70%;
        position: relative;
        margin: auto;
      }
      h1 {
        font-family: "Dancing Script", cursive;
        font-weight: 100;
        font-size: 30px;
        text-align: center;
      }
      button {
        transition: 0.7s;
        font-weight: 100;
        width: max-content;
        padding: 10px 20px;
        border: none;
        outline: none;
        background: rgb(234, 234, 234);
        cursor: pointer;
        border-radius: 0 4px 4px 0;
        color: rgb(100, 100, 100);
        letter-spacing: 0.3px;
        position: absolute;
        right: 0;
        font-family: "Poppins";
        font-weight: 300;
      }
      button:hover {
        background: rgb(220, 220, 220);
        color: rgb(0, 0, 0);
      }
      p {
        padding: 20px;
        margin: auto;
        width: max-content;
        font-family: "Poppins";
        font-weight: 300;
        font-size: 14px;
      }
      a {
        text-decoration: underline;
        color: black;
      }
      div {
        position: absolute;
        top: 30%;
        left: 50%;
        transform: translate(-50%, -30%);
        width: 50%;
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
        border-radius: 10px;
        height: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0px;
        flex-direction: column;
        padding: 30px 0;
        background: white;
      }
      footer {
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: "Poppins";
        font-weight: 300;
        font-size: 14px;
        position: absolute;
        bottom: 0;
        gap: 40px;
        width: 100%;
        background: white;
      }
      footer a {
        text-decoration: none;
      }
      footer p {
        margin: 0;
      }
    </style>
  </head>
  <body>
    <div>
      <h1>Url Shortner</h1>
      <form method="POST" action="/url">
        <% if (locals.redirectpage) { %>
        <input
          type="text"
          name="url"
          placeholder="Enter your url here . . ."
          value="<%= redirectpage  %>"
        />
        <% } %>
        <button type="submit">Generate</button>
      </form>
      <% if (locals.url) { %>
      <p>
        ShorUrl :
        <a href="<%= redirectpage %>" target="_blank"
          >http://localhost:4001/url/<%= url %></a
        >
      </p>
      <% } %>
    </div>
    <footer>
      <p>Made by : Ishan Aryan</p>
      <a href="https://github.com/ishanaryan1602" target="_blank"
        >Github : github1602@gmail.com</a
      >
    </footer>
  </body>
</html>
